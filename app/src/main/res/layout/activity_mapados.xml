<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtransparente"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:background="@android:color/background_light"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-black"
            android:text="CULTURA MAYA"
            android:textSize="19sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/altavoz" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:text="Presiona para escuchar"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button_expand"
            android:layout_width="63dp"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/mas" />

        <Button
            android:id="@+id/button_collapse"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/no" />


        <Button
            android:id="@+id/mapasabrirrr"
            android:layout_width="113dp"
            android:layout_height="105dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/imgubi"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoubi"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_view_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="30sp" />



    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@android:color/white"
        app:behavior_hideable="true"
        app:behavior_peekHeight="55dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:text="2. Zona Arqueológica de Tulum\n\nAquí nuestros antepasados tuvieron buen gusto y construyeron su ciudad amurallada con vistas al Caribe. La Zona Arqueológica de Tulum se encuentra en plena Riviera Maya, a sólo 60 kilómetros de Playa del Carmen y a unos 180 de Cancún. El espectáculo resulta abrumador, así que si sufres de Síndrome de Stendhal ya puedes andarte con cuidado porque el vahído por belleza está garantizado. Las ruinas de la antigua Zamá (amanecer, en maya), están dentro del Parque Nacional de Tulum, un espacio natural en el que entra la imponente playa sobre cuyo acantilado se alza el complejo amurallado. Destaca El Castillo, una torre de vigilancia que se supone servía de faro para señalizar la costa a los barcos de mercancías. Hay mucho que disfrutar en esta zona del estado mexicano de Quintana Roo, pero debes tener en cuenta que la Zona Arqueológica es la más visitada de todo México tras Chichén Itzá y Teotihuacán, así que te aconsejamos que disfrutes de la experiencia arqueológica a primera hora de la mañana y ya luego programes el día, sin olvidarte de un buen chapuzón en la playa para observar las ruinas de Tulum desde el mar."
            android:textSize="16sp" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>