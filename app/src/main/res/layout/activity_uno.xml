<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtransparente"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:background="@android:color/background_light"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="821dp"
            android:layout_height="193dp"
            android:layout_marginStart="-240dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/pergamino"
            android:contentDescription="@string/todo"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="-240dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/cultura_maya"
            android:textSize="19sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="18dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/altavoz"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:text="@string/presiona_para_escuchar"
            android:textSize="13sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:id="@+id/button_expand"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ver" />

        <Button
            android:id="@+id/button_collapse"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/no"
            android:layout_marginLeft="270dp" />


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uno"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:id="@+id/text_view_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="30sp" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@android:color/white"
        app:behavior_hideable="true"
        app:behavior_peekHeight="55dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textuno"
            android:padding="16dp"
            android:background="@drawable/pergamino"
            android:text="@string/_5"
            android:textSize="16sp" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>